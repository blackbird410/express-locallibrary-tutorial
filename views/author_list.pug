extends layout

block content
    h1= title

    if author_list.length
        ul
            each author in author_list
                li
                    if author.lifespan
                        a(href=author.url) #{author.name}
                        |  ( #{author.lifespan} )
                    else
                        a(href=author.url) #{author.name}
    else
        p There are no author.

